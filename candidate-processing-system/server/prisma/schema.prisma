generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidate {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phoneNumber String
  link        String?
  dob         String?
  status      Status   @default(PENDING)
  externalId  Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  PENDING
  SUCCESS
  FAILED
}